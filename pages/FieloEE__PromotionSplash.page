<apex:page sidebar="false" showHeader="false">
  
<!--  START STYLES -->
    <style>
        .bold { font-weight: bold; }
        .col_50 { width:50%; }
        .col_50 .pbHeader { border: none !important; }
        .col_50 .pbHeader table{ border: none !important; }
        .col_50 .pbSubsection { background-color: #FFFFFF !important; border: 1px solid #E8E8E8; margin: 5px 0 0; padding: 5px; }
        .col_50 .pbSubsection td{ border: none !important; }
        .reportsAndTools { width: 100%; }
        
        .splash_title       { font-size:26px; color:#777777; font-weight:bold; }
        .splash_main        { font-size:18px; color:#777777; }
        .splash_subtitle    { font-size:16px; color:#111111; text-align:center; }
        .splash_text        { font-size:12px; color:#777777; }
        .splash_numbers     { font-family:helvetica; font-size:28px; color:#2D64CB; font-weight:bold; }
    </style>
<!--  END STYLES -->

<!--   START SPLASH -->
        <div style="width:800px; margin:20px;">
            <div class="splash_title"><apex:outputText value="{!$Label.fieloee__pointsengine}"/></div>
            <div class="splash_main">{!$Label.SplashPointsEngineMain}</div>
            <div style="position:relative; margin:20px auto; width:567px; height:255px; background:url({!URLFOR($Resource.images, 'splash/timeline.png')})">
                <div style="position:absolute; top:77px;  left:220px;" class="splash_subtitle">{!$Label.DefaultPromotion}</div>
                <div style="position:absolute; top:115px; left:190px;" class="splash_subtitle">{!$Label.Promotions} 1</div>
                <div style="position:absolute; top:145px; left:340px;" class="splash_subtitle">{!$Label.Promotions} 2</div>
                <div style="position:absolute; top:182px; left:130px;" class="splash_subtitle">{!$Label.Promotions} 3</div>
            </div>
            <div class="splash_text">{!$Label.SplashPointsEngineText}</div>
            <table style="margin-top:20px;">
                <tr>
                    <td style="width:1px; font-size:60px; font-weight:bold; color:#ff0000;">!</td>
                    <td style="vertical-align:middle;"><div class="splash_text" style="color:#ff0000;"><apex:outputText value="{!$Label.fieloee__splashpointsenginenote}" escape="false"/></div></td>
                </tr>
            </table>
        </div> 

<!--   END SPLASH -->

</apex:page>