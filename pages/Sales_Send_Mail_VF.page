<apex:page standardController="Sales_Order_Form__c" extensions="Sales_Send_Mail_Class"  >
    
    <apex:form >  
        <apex:pageBlock title="Email the Sales Order Form">
            <apex:pageBlockSection columns="1" >
                <apex:inputField value="{!c.AutoRABIT_Accounts__c}" label="Enter the Email Address"/>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Select Sales Order Form" />
                    <apex:selectList value="{!queue}" multiselect="false" size="1">
                        <apex:selectOptions value="{!options}"/>
                    </apex:selectList> 
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <div align="center" draggable="false" >
                <apex:commandButton value="Send Mail" action="{!save}"/>  
            </div>
        </apex:pageBlock>
        
    </apex:form>
</apex:page>