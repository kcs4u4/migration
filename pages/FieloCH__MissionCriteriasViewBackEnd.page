<apex:page standardController="FieloCH__Mission__c" extensions="FieloCH.MissionEditBackEndExtension" >
	<apex:pageBlock rendered="{!criterias.size < 1}">
		<apex:pageBlockSection columns="1">
			<apex:pageMessage summary="{!$Label.fieloch__infonocriterias}" severity="info" strength="2"/>
		</apex:pageBlockSection>
	</apex:pageBlock>
	<apex:pageBlock rendered="{!criterias.size > 0}">
		<apex:pageBlockSection columns="1">
			<apex:variable id="contador" var="contador" value="1" />
			<apex:pageBlockTable value="{!criterias}" var="c" >
				<apex:column value="{! contador }." />
				<apex:column value="{!c.criteria.FieloCH__FieldName__c}" />
				<apex:column value="{!c.criteria.FieloCH__Operator__c}" />
				<apex:column HeaderValue="{!$Label.fieloee__value}">
					<apex:outputField id="texto" value="{!c.criteria.FieloCH__Values__c}" rendered="{!c.criteria.FieloCH__FieldType__c=='Text' || c.criteria.FieloCH__FieldType__c=='List' || c.criteria.FieloCH__FieldType__c=='REFERENCE'}"/>
			        <apex:outputField id="fecha" value="{!c.criteria.FieloCH__DateValue__c}" rendered="{!c.criteria.FieloCH__FieldType__c=='DATE'}"/>
			        <apex:outputField id="numero" value="{!c.criteria.FieloCH__NumberValue__c}" rendered="{!c.criteria.FieloCH__FieldType__c=='Number'}"/>
				    <apex:outputField id="boolean" value="{!c.criteria.FieloCH__BooleanValue__c}" rendered="{!c.criteria.FieloCH__FieldType__c=='Boolean'}"/>
				</apex:column>
				<apex:column rendered="{!IF(criterias.size > 1, true, false)}">
                  	<apex:panelGroup >
                   		<apex:variable var="contador" value="{! Text(Value(contador) + 1)}" />
                       	<!--{!$Label.FieloEE__And}-->
					</apex:panelGroup>
				</apex:column>
			</apex:pageBlockTable>
		</apex:pageBlockSection>
	</apex:pageBlock>
</apex:page>