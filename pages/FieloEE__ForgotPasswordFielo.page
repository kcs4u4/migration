<apex:page id="forgotPassword" showHeader="false" controller="FieloEE.ForgotPasswordFieloController" title="{!$Label.site.forgot_password}" standardStylesheets="false">
    <apex:composition template="{!$Site.Template}">
        <apex:define name="body">
            <div class="container-fluid">
                <apex:form >
                    <legend>
                        <apex:outputText value="{!$Label.site.forgot_password}"/>
                    </legend>
                    <div class="row-fluid">
                        <div class="span12 pagination-centered">
                            <h5>
                                <apex:outputText styleClass="title" value="{!$Label.site.enter_password}"/>
                            </h5>
                            <div class="form-inline">
                                <apex:outputLabel value="{!$Label.site.username}" for="username"/>
                                <apex:inputText required="true" id="username" value="{!username}" styleClass="input-medium"/>
                                <apex:commandButton id="submit" value="{!$Label.site.submit}" action="{!forgotPassword}" styleClass="btn"/>
                            </div>
                        </div>
                    </div>
                </apex:form>
            </div>
        </apex:define>
    </apex:composition>
</apex:page>