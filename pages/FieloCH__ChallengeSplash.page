<apex:page sidebar="false" showHeader="false">
<!--  START STYLES -->
    <style>
        .bold { font-weight: bold; }
        .col_50 { width:50%; }
        .col_50 .pbHeader { border: none !important; }
        .col_50 .pbHeader table{ border: none !important; }
        .col_50 .pbSubsection { background-color: #FFFFFF !important; border: 1px solid #E8E8E8; margin: 5px 0 0; padding: 5px; }
        .col_50 .pbSubsection td{ border: none !important; }
        .reportsAndTools { width: 100%; }
        
        .splash_title       { font-size:26px; color:#777777; font-weight:bold; }
        .splash_main        { font-size:18px; color:#777777; }
        .splash_subtitle    { font-size:16px; color:#111111; text-align:center; }
        .splash_text        { font-size:12px; color:#777777; }
        .splash_numbers     { font-family:helvetica; font-size:28px; color:#2D64CB; font-weight:bold; }
    </style>
<!--  END STYLES -->

<!--   START SPLASH -->
    <div style="width:800px; margin:20px;">
        <div class="splash_title"><apex:outputText value="{!$ObjectType.FieloCH__Challenge__c.LabelPlural}"/></div>
        <div class="splash_main"><apex:outputText value="{!JSENCODE($Label.fieloch__splashchallengesmain)}" escape="false"/></div>
        <div style="position:relative; margin:50px auto 20px; height:400px;">
            <div style="position:absolute; top:10px; left:0px; width:150px; height:207px; background:no-repeat url({!URLFOR($Resource.challenge_images, 'splash/LSP1.png')}); background-size: 100%;"></div>
            <div style="position:absolute; top:10px; left:210px; width:150px; height:207px; background:no-repeat url({!URLFOR($Resource.challenge_images, 'splash/LSP2.png')}); background-size: 100%;"></div>
            <div style="position:absolute; top:10px; right:210px; width:150px; height:207px; background:no-repeat url({!URLFOR($Resource.challenge_images, 'splash/LSP3.png')}); background-size: 100%;"></div>
            <div style="position:absolute; top:10px; right:0px; width:150px; height:207px; background:no-repeat url({!URLFOR($Resource.challenge_images, 'splash/LSP4.png')}); background-size: 100%;"></div>
            <div style="position:absolute; top:150px; left:0px; width:150px;">
                 <div class="splash_subtitle"><apex:outputText value="{!JSENCODE($Label.fieloch__splashmembertitle)}" escape="false"/></div>
                 <div class="splash_text"><apex:outputText value="{!$Label.fieloch__splashmemberinfo}"/></div>
            </div>
            <div style="position:absolute; top:150px; left:210px; width:150px;">
                 <div class="splash_subtitle"><apex:outputText value="{!JSENCODE($Label.fieloch__splashtimetitle)}" escape="false"/></div>
                 <div class="splash_text"><apex:outputText value="{!$Label.fieloch__splashtimeinfo}"/></div>
            </div>
            <div style="position:absolute; top:150px; right:210px; width:150px;">
                <div class="splash_subtitle"><apex:outputText value="{!JSENCODE($Label.fieloch__splashdashboardtitle)}" escape="false"/></div>
                <div class="splash_text"><apex:outputText value="{!$Label.fieloch__splashdashboardinfo}"/></div>
            </div>
            <div style="position:absolute; top:150px; right:0px; width:150px;">
                <div class="splash_subtitle"><apex:outputText value="{!JSENCODE($Label.fieloch__splashrewardstitle)}" escape="false"/></div>
                <div class="splash_text"><apex:outputText value="{!$Label.fieloch__splashrewardsinfo}"/></div> 
            </div>
        </div>
    </div>
<!--   END SPLASH -->
</apex:page>